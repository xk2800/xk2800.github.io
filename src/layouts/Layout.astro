---
import { ViewTransitions } from "astro:transitions";

import { SEO } from "astro-seo";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='/favicon.png' />
    <!-- <meta name='generator' content={Astro.generator} /> -->
    <SEO
      title={title}
      description='Xavier is a Creative Technologist and this is his portfolio.'
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: "https://xavierkhew.com/logo.png",
        },
      }}
      twitter={{
        creator: "@xk2800",
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://xavierkhew.com/logo.png",
          },
          { name: "twitter:title", content: title },
          {
            name: "twitter:description",
            content:
              "Xavier is a Creative Technologist and this is his portfolio.",
          },
        ],
      }}
    />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100;200;300;400;500;600;700;800;900&display=swap'
      rel='stylesheet'
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main class='container py-xxl'>
      <slot />
    </main>
  </body>
</html>
